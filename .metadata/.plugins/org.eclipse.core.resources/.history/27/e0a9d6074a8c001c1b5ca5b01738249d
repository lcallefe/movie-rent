package entities;

public class RentService {
	
	RentInvoice invoice = new RentInvoice();

	public RentInvoice rent(Movie movie) {
		if (movie.getStock() == 0)
			return null;
		
		invoice.setPrice(movie.getPrice());
		invoice.setReturnDate(movie.getReturnDate());
		movie.setStock(movie.getStock()-1);
		return invoice;
	}
	
	public int returnStock (Movie movie) {
		if (invoice!=null && rent(movie)!=null)
			return (movie.getStock() - 1);
		else
			return movie.getStock();
	}
	
}
